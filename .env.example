# ========================================
# TaskMaster - Environment Variables Template
# ========================================
# Copy this file to .env for development or .env.production for production
# NEVER commit .env files with real keys to version control!

# ========================================
# SUPABASE CONFIGURATION (Required)
# ========================================
VITE_SUPABASE_URL=https://[YOUR-PROJECT-ID].supabase.co
VITE_SUPABASE_ANON_KEY=[YOUR-ANON-KEY]

# ========================================
# FEATURE FLAGS
# ========================================
# Classic Routes Preview (set to true in development, false in production)
VITE_ENABLE_CLASSIC_ROUTES=false

# Core Features
VITE_FEATURE_PIPELINE_V2=true
VITE_FEATURE_APPROVALS=true
VITE_FEATURE_COMMAND_CENTER=true
VITE_FEATURE_PLANNING_COPILOT=true

# Not Ready for v1.0 (keep false until implemented)
VITE_FEATURE_BILLING=false
VITE_FEATURE_SUBSCRIPTIONS=false
VITE_FEATURE_OWNERSHIP=false

# ========================================
# BETA MODE CONFIGURATION
# ========================================
VITE_BETA_MODE=true
VITE_INVITE_ONLY=true
VITE_PUBLIC_SIGNUPS=false

# ========================================
# OPENAI / AI COPILOT (Optional)
# ========================================
VITE_OPENAI_API_KEY=sk-proj-your-openai-key-here
VITE_OPENAI_MODEL=gpt-4o-mini
VITE_COPILOT_PROVIDER=openai

# ========================================
# GOOGLE INTEGRATION (Optional - Not Implemented)
# ========================================
VITE_GOOGLE_API_KEY=[YOUR-GOOGLE-API-KEY]
VITE_GOOGLE_CLIENT_ID=[YOUR-GOOGLE-CLIENT-ID]

# ========================================
# STRIPE INTEGRATION (Optional - Not Implemented)
# ========================================
VITE_STRIPE_PUBLISHABLE_KEY=[YOUR-STRIPE-PUBLISHABLE-KEY]

# ========================================
# ANALYTICS & MONITORING (Optional)
# ========================================
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=XXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn-here

# ========================================
# ENVIRONMENT
# ========================================
VITE_APP_ENV=development
# Options: development | staging | production